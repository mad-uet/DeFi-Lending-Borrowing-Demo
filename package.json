{
  "name": "defi-lending-borrowing-sim",
  "version": "1.0.0",
  "description": "DeFi Lending & Borrowing Simulation with Simple Interest",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "compile": "hardhat compile",
    "compile:clean": "hardhat clean && hardhat compile",
    "node": "hardhat node --no-deploy",
    "node:verbose": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy-mocks.ts --network localhost",
    "deploy:all": "hardhat run scripts/deploy-all.ts --network localhost",
    "deploy:lending": "hardhat run scripts/deploy-lending-pool.ts --network localhost",
    "copy:artifacts": "npx ts-node scripts/copy-artifacts-to-frontend.ts",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/start-all.ps1",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/stop-all.ps1",
    "clean": "hardhat clean && if (Test-Path cache) { Remove-Item -Recurse -Force cache }",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build"
  },
  "keywords": [
    "defi",
    "lending",
    "borrowing",
    "hardhat",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.3.10",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.0.1",
    "ethers": "^6.10.0"
  }
}
